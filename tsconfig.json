{
  "compilerOptions": {
    "target": "ES2020", // JavaScript version to compile to
    "module": "ESNext", // Module system
    "moduleResolution": "Node", // Resolve modules like Node.js
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Enable compatibility for CommonJS
    "skipLibCheck": true, // Skip checking third-party libraries
    "types": ["@cloudflare/workers-types"], // Include Cloudflare Workers types
    "lib": ["DOM", "ES2020"], // Specify library files to include
    "baseUrl": ".", // Base directory for resolving paths
    // "outDir": "./dist", // Output directory for compiled files
    "resolveJsonModule": true // Support for importing JSON files
  },
  "include": ["src/**/*.ts"], // Include TypeScript files in src/
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
